<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>
    <Logger name="uk.co.nickthecoder.pinkwino.WikiEngine" level="TRACE"/>
    <Logger name="uk.co.nickthecoder.pinkwino.optional.image.Resize" level="TRACE"/>
    <Logger name="uk.co.nickthecoder.pinkwino.optional.image.ImagePreprocessor" level="TRACE"/>
    <Logger name="uk.co.nickthecoder.pinkwino.metadata.LuceneMetaData" level="TRACE"/>
    
  </Loggers>
</Configuration>
